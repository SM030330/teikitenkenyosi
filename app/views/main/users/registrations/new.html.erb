<div class="container">
  <h2 class="text-center mt-2"><%= t('sign_up') %></h2>
  <div class="card card-container">
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: "d-flex gap-3 flex-column" do |f| %>
      <%= render "shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control"%>
      </div>
      <div class="d-flex flex-column gap-2">
        <%= f.submit t('sign_up'), class: "btn btn-outline-secondary btn-new py-2 px-2" %><br />
        <%= link_to t("sign_in"), new_session_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
